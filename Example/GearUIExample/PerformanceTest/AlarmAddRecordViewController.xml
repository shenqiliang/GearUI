    <LayoutView id="id_topContainerView" left="0" top="96" right="0" height="164" backgroundColor="clear">
        <ImageView id="id_microIcon" centerX="super.centerX" top="0" width="47" height="86">alarm_record_icon_micro</ImageView>
        <LayoutView id="id_voiceWave" centerX="super.centerX" bottom="id_microIcon.bottom-42"  width="26" height="0" backgroundColor="white">
        </LayoutView>
        <Label id="id_recordName" centerX="super.centerX" top="id_microIcon.bottom+24" font="17" textColor="white">听听声音1</Label>
