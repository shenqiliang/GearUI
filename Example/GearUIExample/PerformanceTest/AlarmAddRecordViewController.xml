        <Button id="id_reRecordButton" right="id_actionButton.left-45" centerY="id_actionButton.centerY" image="alarm_record_icon_retry" delaysHighlighting="yes"></Button>
        <Button id="id_saveButton" left="id_actionButton.right+45" centerY="id_actionButton.centerY" font="17" titleColor="#FFFFFF 100%" delaysHighlighting="yes" highlightedTitleColor="#FFFFFF 50%">保存</Button>
    </LayoutView>
