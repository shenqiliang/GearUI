<LayoutView backgroundColor="#2D323F 100%">
    <TableView id="main_table" top="30" left="0" right="0" bottom="0" backgroundColor="clear" separatorStyle="none">
        <TableViewCell id="match_cell"  backgroundColor="clear"  selectionStyle="none" >
            <Label id="time" left="30" top="10" font="13" right="30" textColor="#7A7E89 100%" textAlignment="center">07:00 NBA常规赛 </Label>
            <Label id="score" left="team_left_icon.right+10" right="team_right_icon.left-10" top="time.bottom+22" font="29" textAlignment="center" textColor="#7A7E89 100%">121 : 90</Label>
            <Label id="status" left="team_left_icon.right+10" right="team_right_icon.left-10" top="time.bottom+62" font="13" textAlignment="center" textColor="#7A7E89 100%">已结束</Label>
            <ImageView id="team_left_icon" left="30" top="time.bottom+13" width="52" height="52" backgroundColor="white" cornerRadius="26"></ImageView>
            <Label id="team_left_name" centerX="team_left_icon.centerX" top="team_left_icon.bottom+16" font="17" textColor="white">黄蜂</Label>
            <ImageView id="team_right_icon" right="30" top="time.bottom+13" width="52" height="52" backgroundColor="white" cornerRadius="26"></ImageView>
            <Label id="team_right_name" centerX="team_right_icon.centerX" bottom="12" top="team_left_icon.bottom+16" font="17" textColor="white">公牛</Label>
        </TableViewCell>
        <TableViewCell id="header"  backgroundColor="clear" selectionStyle="none" >
            <Label id="time" left="30" top="10" font="13" right="30" textColor="#7A7E89 100%" textAlignment="center">07:00 NBA常规赛 </Label>
            <Label left="team_left_icon.right+10" right="team_right_icon.left-10" top="time.bottom+22" font="29" textAlignment="center" textColor="#7A7E89 100%">121 : 90</Label>
            <Label left="team_left_icon.right+10" right="team_right_icon.left-10" top="time.bottom+62" font="13" textAlignment="center" textColor="#7A7E89 100%">已结束</Label>
            <ImageView id="team_left_icon" left="30" top="time.bottom+13" width="52" height="52" backgroundColor="#7A7E89 100%" cornerRadius="26"></ImageView>
            <Label centerX="team_left_icon.centerX" top="team_left_icon.bottom+16" font="17" textColor="#7A7E89 100%">黄蜂</Label>
            <ImageView id="team_right_icon" right="30" top="time.bottom+13" width="52" height="52" backgroundColor="white" cornerRadius="26"></ImageView>
            <Label centerX="team_right_icon.centerX" bottom="12" top="team_left_icon.bottom+16" font="17" textColor="white">公牛</Label>
        </TableViewCell>
        <TableViewCell id="header"  backgroundColor="clear" selectionStyle="none" >
            <Label id="time" left="30" top="10" font="13" right="30" textColor="#7A7E89 100%" textAlignment="center">07:00 NBA常规赛 </Label>
            <Label left="team_left_icon.right+10" right="team_right_icon.left-10" top="time.bottom+22" font="29" textAlignment="center" textColor="#7A7E89 100%">121 : 90</Label>
            <Label left="team_left_icon.right+10" right="team_right_icon.left-10" top="time.bottom+62" font="13" textAlignment="center" textColor="#7A7E89 100%">已结束</Label>
            <ImageView id="team_left_icon" left="30" top="time.bottom+13" width="52" height="52" backgroundColor="#7A7E89 100%" cornerRadius="26"></ImageView>
            <Label centerX="team_left_icon.centerX" top="team_left_icon.bottom+16" font="17" textColor="#7A7E89 100%">黄蜂</Label>
            <ImageView id="team_right_icon" right="30" top="time.bottom+13" width="52" height="52" backgroundColor="white" cornerRadius="26"></ImageView>
            <Label centerX="team_right_icon.centerX" bottom="12" top="team_left_icon.bottom+16" font="17" textColor="white">公牛</Label>
        </TableViewCell>
    </TableView>
</LayoutView>
