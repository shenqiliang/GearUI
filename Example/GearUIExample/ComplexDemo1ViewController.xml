                <Label id="#name" left="item.left" top="item.bottom+8" font="13" right="item.right" textColor="white">睡美人</Label>
                <Label id="episode_num" right="item.right-2.5" bottom="item.bottom-2.5" font="9" textColor="white">230集</Label>
                <Label id="tag" right="item.right" top="item.top+8" font="13" height="18" width="36" textColor="white" textAlignment="center" backgroundColor="#00C2DE 100%">最新</Label>
                <Button id="button" delaysHighlighting="yes" left="0" right="0" top="0" bottom="item.bottom" backgroundImage="clear" highlightedBackgroundImage="#000000 50%"/>
            </LayoutView>
            <LayoutView id="layout_1" centerX="super.centerX" top="15" width="super.width*0.33333-16" height="layout_0.width+35">
